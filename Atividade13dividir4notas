import java.util.Scanner;

class Dividirquatronotas {
    public static void main(String[] args) {
        
        double primeiraNota = 0;
        double segundaNota = 0;
        double terceiraNota = 0;
        double quartaNota = 0;
        
        Scanner scanner = new Scanner(System.in);
                                      
        System.out.println("Informe a primeira nota: ");
        primeiraNota = scanner.nextDouble();
        
        System.out.println("Informe a segunda nota: ");
        segundaNota = scanner.nextDouble();
        
        System.out.println("Informe a terceira nota: ");
        terceiraNota = scanner.nextDouble();
        
        System.out.println("Informe a quarta nota: ");
        quartaNota = scanner.nextDouble();
        
        double somaNotas = primeiraNota + segundaNota + terceiraNota + quartaNota;
        double mediaNotas = somaNotas/4;
        
        System.out.println("Sua media eh: " + mediaNotas);
        
    }
}
